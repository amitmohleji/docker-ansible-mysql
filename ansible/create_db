USE mysql;
FLUSH PRIVILEGES;
DELETE FROM mysql.user;
GRANT ALL PRIVILEGES ON *.* TO 'root'@'localhost' IDENTIFIED BY 'secret' WITH GRANT OPTION;
GRANT ALL PRIVILEGES ON *.* TO 'root'@'%' IDENTIFIED BY 'secret' WITH GRANT OPTION;
CREATE DATABASE IF NOT EXISTS xl CHARACTER SET utf8 COLLATE utf8_general_ci;
GRANT ALL ON xl.* to 'amit' IDENTIFIED BY 'amit123';
GRANT ALL ON *.* to 'amit' IDENTIFIED BY 'amit123';
FLUSH PRIVILEGES;
